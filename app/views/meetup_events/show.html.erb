<div class="row">
  <div class="large-12 columns">
    <h1>Norfolk Local Developer Meetups</h1>
  </div>
</div>

<div class="row">
  <div class="small-9 columns small-centered">
    <% @meetup_events.each do |me| %>
      <article class="event">
        <div class="event-date">
          <p class="event-month"><%= Date::ABBR_MONTHNAMES[Time.at(me['time']/1000).month] %></p>
          <p class="event-day"><%= Time.at(me['time']/1000).day %></p>
        </div>
        <div class="event-desc">
          <h4 class="event-desc-header"><%= me['name'] %></h4>
          <p class="event-desc-detail">
            <span class="event-desc-time"></span>
            <%= me['group']['name'] %><br />
            <%#= me['description'] ? me['description'].html_safe : '' %>
          </p>
          <%= link_to 'Details', '#', data: { reveal_id: "details-#{me['id']}"}, class: "rsvp button" %>
          <%= link_to 'RSVP', me['event_url'], class: "rsvp button", target: '_blank' %>
        </div>
      </article>
      <div data-reveal="" class="reveal-modal" id="<%= "details-#{me['id']}" %>">
        <article class="event">
          <div class="event-date">
            <p class="event-month"><%= Date::ABBR_MONTHNAMES[Time.at(me['time']/1000).month] %></p>
            <p class="event-day"><%= Time.at(me['time']/1000).day %></p>
          </div>
          <div class="event-desc">
            <h4 class="event-desc-header"><%= me['name'] %></h4>
            <p class="event-desc-detail">
              <span class="event-desc-time"></span>
              <%= me['group']['name'] %><br />
              <%= me['description'] ? me['description'].html_safe : '' %>
            </p>
            <% if me['venue'] %>
              <p class="panel">
                <%= "Venue: #{me['venue']['name']} - #{me['venue']['address_1']}, #{me['venue']['city']} #{me['venue']['state']}"  %>
              </p>
            <% end %>
            <%= link_to 'RSVP', me['event_url'], class: "rsvp button", target: '_blank' %>
          </div>
        </article>
      </div>
      <hr>
    <% end %>
  </div>
</div>